@model CST350Milestone5.Models.GameBoardModel

<style>
    .game-save-class
    {
        width: 90%;
        display: flex;
        flex-wrap: wrap;
    }

    .game-board-class
    {
        width: 90%;
        aspect-ratio: @Model.Width / @Model.Height;
        display: flex;
        flex-wrap: wrap;
    }

    .save-button-class
    {
        height: 50px;
        width: 125px;
    }

    .game-cell-class
    {
        width: 5%;
        aspect-ratio: 1/1;
    }

    .game-img-class
    {
        background-size: cover;
        background-position: center;
        width: 100%;
        height: 100%;
    }

    .line-break
    {
        flex-basis: 100%;
        height: 0;
    }

    .seamless-class
    {
        border: 0px;
        padding: 0px 0px 0px 0px;
    }

    .save-result-class
    {
        padding: 10px 10px 10px 10px;
    }
</style>


<h4>Play Minesweeper</h4>

<div class="game-save-class d-flex">
    <div class="d-flex">
        <button class="btn btn-primary save-button-class" id="save-button">Save Game</button>
    </div>
    <div class="d-flex save-result-class justify-content-center justify-content-start" id="save-result-container"></div>
</div>

<div class="game-board-class" id="game-board">
    <partial name="_GameBoard" model="Model" />
</div>

<button class="btn btn-info" onclick="getsaves(0)">Load Game</button>
<div id="save-list">

</div>